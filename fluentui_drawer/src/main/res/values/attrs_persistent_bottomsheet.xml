<resources>
    <declare-styleable name="FluentUIPersistentBottomSheet">
        <!-- The min height of the BottomSheet -->
        <attr name="fluentuiPersistentBottomSheet_peekHeight" format="dimension" />
        <!--  Determines whether to keep the default drawer handle or not -->
        <attr name="fluentuiPersistentBottomSheet_isDrawerHandleVisible" format="boolean" />
        <!--  horizontal Item in a row-->
        <attr name="fluentuiPersistentBottomSheet_ItemsInRow" format="integer" />
        <!-- horizontal item text style-->
        <attr name="fluentuiPersistentBottomSheet_horizontalItemTextAppearance" format="reference" />
        <!-- vertical item text style-->
        <attr name="fluentuiPersistentBottomSheet_verticalItemTextAppearance" format="reference" />
        <!-- vertical item subtitle style-->
        <attr name="fluentuiPersistentBottomSheet_verticalItemSubTextAppearance" format="reference" />
        <!--header text style-->
        <attr name="fluentuiPersistentBottomSheet_headerTextAppearance" format="reference" />
    </declare-styleable>
</resources>